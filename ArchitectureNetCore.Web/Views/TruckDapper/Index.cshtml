@model IEnumerable<ArchitectureNetCore.Domain.Entities.Truck>
@{
    ViewData["Title"] = "Index";
}
<h3>Listagem de caminhões - Dapper</h3>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ID)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.WheelConfiguration)</th>
            <th>@Html.DisplayNameFor(model => model.Power)</th>
            <th>@Html.DisplayNameFor(model => model.Weight)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ID)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.WheelConfiguration)</td>
                <td>@Html.DisplayFor(modelItem => item.Power)</td>
                <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>